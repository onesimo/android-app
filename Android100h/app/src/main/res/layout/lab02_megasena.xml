<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
     style="@style/AppTheme.Lab01.Title"
     android:text="@string/lab01_bt_megasena" />

    <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal">

     <TextView
     android:id="@+id/lab02_tv_jogos"
     android:text="@string/lab02_tv_jogos"
     style="@style/AppTheme.Lab01.Label" />

     <TextView
     android:id="@+id/lab02_tv_sorteios"
     android:layout_width="wrap_content"
     android:layout_height="match_parent"
     android:gravity="center"
    android:text="@string/lab02_sb_sorteio"/>

     <SeekBar
     android:id="@+id/lab02_sb_sorteios"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
    android:layout_weight="1"
     android:layout_gravity="center"
     android:progress="@integer/lab02_sb_sorteio"
     android:max="@integer/lab02_sb_sorteio_max"/>

     <Button
     android:id="@+id/lab02_bt_sortear"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="@string/lab02_bt_sortear" />
     </LinearLayout>

    <ListView
     android:id="@android:id/list"
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight="1" />
</LinearLayout>
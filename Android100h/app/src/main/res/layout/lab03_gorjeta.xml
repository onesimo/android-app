<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/lab03_margin"
        android:stretchColumns="1, 2">

        <TableRow
        android:id="@+id/lab03_linha01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/lab03_margin">
        
        <TextView
        android:labelFor="@+id/lab03_et_conta"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        android:text="@string/lab03_tv_conta" />
        
        <EditText
        android:id="@+id/lab03_et_conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_span="3"
        android:text="@string/lab03_et_0"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal">

                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow
         android:id="@+id/lab03_linha02"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="@dimen/lab03_margin">

         <TextView
         android:layout_column="1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="@string/lab03_tv_gorjeta" />

         <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="@string/lab03_tv_valor" />
         </TableRow>

        <TableRow
         android:id="@+id/lab03_linha03"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="@dimen/lab03_margin">
         
         <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="@string/lab03_tv_percent_1" />
       
         <EditText
          android:id="@+id/lab03_et_gorjeta_1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="@string/lab03_et_0"
          android:focusable="false"
          android:inputType="none" />
         
          <EditText
          android:id="@+id/lab03_et_valor_1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="@string/lab03_et_0"
          android:focusable="false"
          android:inputType="none" />
         </TableRow>

        <TableRow
         android:id="@+id/lab03_linha04"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="@dimen/lab03_margin">
        
         <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="@string/lab03_tv_percent_2" />
        
         <EditText
         android:id="@+id/lab03_et_gorjeta_2"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="@string/lab03_et_0"
         android:focusable="false"
         android:inputType="none" />
        
         <EditText
         android:id="@+id/lab03_et_valor_2"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="@string/lab03_et_0"
         android:focusable="false"
         android:inputType="none" />
         </TableRow>



        <TableRow
            android:id="@+id/lab03_linha05"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/lab03_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/lab03_tv_percent_3" />

            <EditText
                android:id="@+id/lab03_et_gorjeta_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/lab03_et_0"
                android:focusable="false"
                android:inputType="none" />

            <EditText
                android:id="@+id/lab03_et_valor_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/lab03_et_0"
                android:focusable="false"
                android:inputType="none" />
        </TableRow>

        <TableRow
         android:id="@+id/lab03_linha06"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="@dimen/lab03_margin">
        
         <TextView
         android:id="@+id/lab03_tv_def"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center"
         android:text="@string/lab03_tv_percent_def"/>
         <EditText
         android:layout_column="1"
         android:id="@+id/lab03_et_gorjeta_def"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="@string/lab03_et_0"
         android:focusable="false"
         android:inputType="none" />
        
         <EditText
         android:id="@+id/lab03_et_valor_def"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="@string/lab03_et_0"
         android:focusable="false"
         android:inputType="none" />
         </TableRow>

        <TableRow
         android:id="@+id/lab03_linha07"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="@dimen/lab03_margin">
        
         <TextView
         android:labelFor="@+id/lab03_sb_def"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center_vertical|end"
         android:text="@string/lab03_tv_def" />
        
         <SeekBar
         android:id="@+id/lab03_sb_def"
         android:layout_span="2"
         android:progress="@integer/lab03_percent_def" />
         </TableRow>
    </TableLayout>

</LinearLayout>